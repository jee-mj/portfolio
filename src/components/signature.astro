---
import MainText from "../content/signature/main-text.md";
import MainTitle from "../content/signature/main-title.md";
import Content from "./content.astro";
---

<section class="w-full h-full flex-col z-20 hidden" id="signature">
  <div
    class="w-[calc(100vw-2rem)] h-full ml-4 mt-4 pb-0 text-white transition-all duration-100 flex flex-row-reverse overflow-y-auto z-20 bg-none"
    id="signature-content"
  >
    <Content>
      <div
        class="text-3xl font-bold tracking-tight text-white section-content transition-all duration-50"
      >
        <MainTitle />
      </div>
      <div
        class="mt-6 mb-16 text-lg leading-8 text-white section-content transition-all duration-50"
      >
        <MainText />
      </div>
    </Content>
  </div>
  <div
    class="w-[calc(100vw-2rem)] h-[36vh] flex flex-row-reverse transition-all duration-500 z-50 mx-4 mb-4"
    id="signature-label"
  >
    <a
      style="font-size: clamp(2em, 5vw, 4em); padding-right: clamp(0.5em,10vw,60em);"
      class="hover:border-[#ffcd00] hover:text-[#ffcd00]
        transition-all duration-500 hover:w-full
        font-smooch border border-solid border-white
        w-1/2 h-full
        grid content-center justify-end
        bg-secondary-transparent text-white shadow-sm shadow-black"
      id="signature-link">jee-mj</a
    >
    <div id="signature-space" class="h-full w-auto"></div>
  </div>
</section>

<style>
  html,
  body {
    height: 100%;
    margin: 0;
    padding: 0;
  }
</style>
<script>
  const signatureLink = document.getElementById("signature-link");

  // Event listener for section load
  document.addEventListener("sectionLoadEvent", function () {
    setTimeout(() => {
      signatureLink!.classList.remove("w-1/2");
      signatureLink!.classList.remove("hover:w-full");
      signatureLink!.classList.add("w-full");
      setTimeout(() => {}, 150);
    }, 500);
  });

  // Event listener for section unload
  document.addEventListener("sectionUnloadEvent", function () {
    signatureLink!.classList.remove("w-full");
    signatureLink!.classList.add("w-1/2");
    setTimeout(() => {
      signatureLink!.classList.add("hover:w-full");
    }, 1500);
    document
      .getElementById("signature-label")!
      .classList.add("w-[calc(100vw-2rem)]");
    document.getElementById("signature-label")!.classList.remove("w-1/2");
  });
</script>
