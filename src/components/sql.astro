---
import MainText from "../content/sql/main-text.md";
import MainTitle from "../content/sql/main-title.md";
import Content from "./content.astro";

import Hypothesis from "../content/sql/hypothesis.md";
import Aim from "../content/sql/aim.md";
import Tools from "../content/sql/tools.md";
import Method from "../content/sql/method.md";
import Results from "../content/sql/results.md";
import Notes from "../content/sql/notes.md";

import PowerBI from "../content/sql/tools/powerbi.md";
import DrawIO from "../content/sql/tools/drawio.md";
import Redis from "../content/sql/tools/redis.md";
---

<section class="w-full h-full flex-row z-20 hidden" id="sql">
  <div
    class="w-full max-w-5xl h-[calc(100vh-2rem)] my-4 ml-4 text-white transition-all duration-100 flex flex-row-reverse overflow-y-auto z-40 bg-none"
    id="sql-content"
  >
    <Content>
      <div
        class="text-2xl font-bold tracking-tight text-primary section-content transition-all duration-50"
      >
        Abstract
      </div>
      <div
        class="mt-6 mb-4 text-md leading-8 text-white section-content transition-all duration-50"
      >
        This is a static portfolio web application built with Astro, Tailwind,
        and Framer. It attempts to create a seamless, full-screen experience for
        the user. The site is built with a mobile-first approach, and is fully
        responsive.
      </div>
      <div
        class="text-2xl font-bold tracking-tight text-primary section-content transition-all duration-50"
      >
        Hypothesis
      </div>
      <div
        class="mt-6 mb-4 text-md leading-8 text-white section-content transition-all duration-50"
      >
        <Hypothesis />
      </div>
      <div
        class="text-2xl font-bold tracking-tight text-primary section-content transition-all duration-50"
      >
        Aim
      </div>
      <div
        class="mt-6 mb-4 text-md leading-8 text-white section-content transition-all duration-50"
      >
        <Aim />
      </div>
      <div
        class="text-2xl font-bold tracking-tight text-primary section-content transition-all duration-50"
      >
        Tools
      </div>
      <div
        class="mt-6 mb-4 text-md leading-8 text-white section-content transition-all duration-50"
      >
        <Tools />
      </div>
      <div
        class="text-xl font-bold tracking-tight text-primary section-content transition-all duration-50"
      >
        PowerBI
      </div>
      <div
        class="mt-6 mb-4 text-md leading-8 text-white section-content transition-all duration-50"
      >
        <PowerBI />
      </div>
      <div
        class="text-xl font-bold tracking-tight text-primary section-content transition-all duration-50"
      >
        Draw.IO
      </div>
      <div
        class="mt-6 mb-4 text-md leading-8 text-white section-content transition-all duration-50"
      >
        <DrawIO />
      </div>
      <div
        class="text-xl font-bold tracking-tight text-primary section-content transition-all duration-50"
      >
        Redis
      </div>
      <div
        class="mt-6 mb-4 text-md leading-8 text-white section-content transition-all duration-50"
      >
        <Redis />
      </div>
      <div
        class="text-2xl font-bold tracking-tight text-primary section-content transition-all duration-50"
      >
        Method
      </div>

      <div
        class="mt-6 mb-4 text-md leading-8 text-white section-content transition-all duration-50"
      >
        <Method />
      </div>
      <div
        class="text-2xl font-bold tracking-tight text-primary section-content transition-all duration-50"
      >
        Results
      </div>

      <div
        class="mt-6 mb-4 text-md leading-8 text-white section-content transition-all duration-50"
      >
        <Results />
      </div>
      <div
        class="text-2xl font-bold tracking-tight text-primary section-content transition-all duration-50"
      >
        Notes
      </div>

      <div
        class="mt-6 mb-4 text-md leading-8 text-white section-content transition-all duration-50"
      >
        <Notes />
      </div>
    </Content>
  </div>
  <div
    class="w-full xl:max-w-full xl:w-full h-full flex flex-col p-4 pl-0 transition-all duration-500 z-50"
    id="sql-label"
  >
    <div id="topRight" class="w-full h-full flex flex-row-reverse items-center">
      <a
        style="font-size: clamp(2em, 5vw, 4em); gap: clamp(1em, 20vh,10em);"
        class="font-smooch border border-solid
        hover:border-[#ffcd00] hover:text-[#ffcd00] transition-all duration-500
        border-white w-1/2 h-full grid content-center justify-center bg-secondary-transparent text-white shadow-sm shadow-black"
        id="sql-link">SQL<br /><span>2023</span></a
      >
    </div>
    <div id="sql-space" class="w-full h-full transition-all duration-500"></div>
  </div>
</section>
<style>
  html,
  body {
    height: 100%;
    margin: 0;
    padding: 0;
  }
</style>

<script>
  const sqlLink = document.getElementById("sql-link");
  const sqlSpace = document.getElementById("sql-space");

  // Event listener for section load
  document.addEventListener("sectionLoadEvent", function () {
    setTimeout(() => {
      sqlLink!.classList.remove("w-1/2");
      sqlLink!.classList.add("w-full");
      setTimeout(() => {
        document.getElementById("sql-label")!.classList.remove("w-full");
        document.getElementById("sql-label")!.classList.add("w-1/2");
      }, 150);
      setTimeout(() => {
        sqlSpace!.classList.remove("h-full");
        sqlSpace!.classList.add("h-0");
      }, 150);
    }, 500);
  });

  // Event listener for section unload
  document.addEventListener("sectionUnloadEvent", function () {
    sqlSpace!.classList.remove("h-0");
    sqlSpace!.classList.add("h-full");
    sqlLink!.classList.remove("w-full");
    sqlLink!.classList.add("w-1/2");
    document.getElementById("sql-label")!.classList.add("w-full");
    document.getElementById("sql-label")!.classList.remove("w-1/2");
  });
</script>
