---
import Content from "./content.astro";
import Hypothesis from "../content/about/hypothesis.md";
import Aim from "../content/about/aim.md";
import Tools from "../content/about/tools.md";
import Method from "../content/about/method.md";
import Results from "../content/about/results.md";
import Notes from "../content/about/notes.md";

import AstroText from "../content/about/tools/astro.md";
import Tailwind from "../content/about/tools/tailwind.md";
import Framer from "../content/about/tools/framerMotion.md";
---

<section class="w-full h-full flex-row z-20 hidden" id="about">
  <div
    class="w-full max-w-5xl h-[calc(100vh-2rem)] my-4 ml-4 transition-all duration-100 flex flex-row-reverse overflow-y-auto z-40 bg-none"
    id="about-content"
  >
    <Content>
      <div
        class="text-2xl font-bold tracking-tight text-primary section-content transition-all duration-50"
      >
        Abstract
      </div>
      <div
        class="mt-6 mb-4 text-md leading-8 text-white section-content transition-all duration-50"
      >
        This is a static portfolio web application built with Astro, Tailwind,
        and Framer. It attempts to create a seamless, full-screen experience for
        the user. The site is built with a mobile-first approach, and is fully
        responsive.
      </div>
      <div
        class="text-2xl font-bold tracking-tight text-primary section-content transition-all duration-50"
      >
        Hypothesis
      </div>
      <div
        class="mt-6 mb-4 text-md leading-8 text-white section-content transition-all duration-50"
      >
        <Hypothesis />
      </div>
      <div
        class="text-2xl font-bold tracking-tight text-primary section-content transition-all duration-50"
      >
        Aim
      </div>
      <div
        class="mt-6 mb-4 text-md leading-8 text-white section-content transition-all duration-50"
      >
        <Aim />
      </div>
      <div
        class="text-2xl font-bold tracking-tight text-primary section-content transition-all duration-50"
      >
        Tools
      </div>
      <div
        class="mt-6 mb-4 text-md leading-8 text-white section-content transition-all duration-50"
      >
        <Tools />
      </div>
      <div
        class="text-xl font-bold tracking-tight text-primary section-content transition-all duration-50"
      >
        Astro
      </div>
      <div
        class="mt-6 mb-4 text-md leading-8 text-white section-content transition-all duration-50"
      >
        <AstroText />
      </div>
      <div
        class="text-xl font-bold tracking-tight text-primary section-content transition-all duration-50"
      >
        Tailwind
      </div>
      <div
        class="mt-6 mb-4 text-md leading-8 text-white section-content transition-all duration-50"
      >
        <Tailwind />
      </div>
      <div
        class="text-xl font-bold tracking-tight text-primary section-content transition-all duration-50"
      >
        Framer
      </div>
      <div
        class="mt-6 mb-4 text-md leading-8 text-white section-content transition-all duration-50"
      >
        <Framer />
      </div>
      <div
        class="text-2xl font-bold tracking-tight text-primary section-content transition-all duration-50"
      >
        Method
      </div>

      <div
        class="mt-6 mb-4 text-md leading-8 text-white section-content transition-all duration-50"
      >
        <Method />
      </div>
      <div
        class="text-2xl font-bold tracking-tight text-primary section-content transition-all duration-50"
      >
        Results
      </div>

      <div
        class="mt-6 mb-4 text-md leading-8 text-white section-content transition-all duration-50"
      >
        <Results />
      </div>
      <div
        class="text-2xl font-bold tracking-tight text-primary section-content transition-all duration-50"
      >
        Notes
      </div>

      <div
        class="mt-6 mb-4 text-md leading-8 text-white section-content transition-all duration-50"
      >
        <Notes />
      </div>
    </Content>
  </div>
  <div
    class="w-full xl:max-w-full xl:w-full h-full flex flex-col p-4 pl-0 transition-all duration-500 z-50"
    id="about-label"
  >
    <div id="topRight" class="w-full h-full flex flex-row items-center">
      <a
        style="font-size: clamp(2em, 5vw, 4em);"
        class="font-smooch border border-solid
        hover:text-[#ffcd00] hover:border-[#ffcd00] transition-all duration-500
        bg-secondary-transparent text-white border-white shadow-black
        w-1/2 h-full grid content-center justify-center leading-none shadow-sm"
        id="about-link"
      >
        A<br />b<br />o<br />u<br />t</a
      >
    </div>
    <div id="about-space" class="w-full h-full transition-all duration-500">
    </div>
  </div>
</section>

<style>
  html,
  body {
    height: 100%;
    margin: 0;
    padding: 0;
  }
</style>

<script>
  const aboutLink = document.getElementById("about-link");
  const aboutSpace = document.getElementById("about-space");

  // Event listener for section load
  document.addEventListener("sectionLoadEvent", function () {
    setTimeout(() => {
      aboutLink!.classList.remove("w-1/2");
      aboutLink!.classList.add("w-full");
      setTimeout(() => {
        aboutSpace!.classList.remove("h-full");
        aboutSpace!.classList.add("h-0");
      }, 150);
      setTimeout(() => {
        document.getElementById("about-label")!.classList.remove("w-full");
        document.getElementById("about-label")!.classList.add("w-1/2");
      }, 150);
    }, 500);
  });

  // Event listener for section unload
  document.addEventListener("sectionUnloadEvent", function () {
    aboutSpace!.classList.remove("h-0");
    aboutSpace!.classList.add("h-full");
    aboutLink!.classList.remove("w-full");
    aboutLink!.classList.add("w-1/2");
    document.getElementById("about-label")!.classList.add("w-full");
    document.getElementById("about-label")!.classList.remove("w-1/2");
  });
</script>
