---
import MainText from "../content/about/main-text.md";
import MainTitle from "../content/about/main-title.md";
import MainSubtext from "../content/about/main-subtext.md";
import AstroText from "../content/about/astro-text.md";
---

<section class="w-full h-full flex-row z-20 hidden" id="about">
  <div
    class="w-full h-[calc(100vh-2rem)] my-4 ml-4 transition-all duration-100 inline-block overflow-y-auto z-20 bg-none"
    id="about-content"
  >
    <div class="mb-8 ml-4">
      <div class="pb-8 pt-4 sm:pb-4">
        <div class="mx-auto">
          <div class="grid grid-cols-1 items-center gap-x-8 gap-y-8">
            <div class="xl:flex xl:flex-row">
              <div
                class="mx-auto w-full xl:mx-0 transition-all section-content duration-200 opacity-0 pr-4"
              >
                <div class="text-3xl font-bold tracking-tight text-white">
                  <MainTitle />
                </div>
                <div class="mt-6 mb-16 text-md leading-8 text-white">
                  <MainText />
                </div>
                <div class="text-3xl font-bold tracking-tight text-white">
                  Astro: The web framework for content-driven websites
                </div>
                <div class="mt-6 mb-16 text-md leading-8 text-white">
                  <AstroText />
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div
    class="w-full h-full flex flex-col p-4 pl-0 transition-all duration-500 z-50"
    id="about-label"
  >
    <div id="topRight" class="w-full h-full flex flex-row items-center">
      <a
        style="font-size: clamp(2em, 5vw, 4em);"
        class="font-smooch border border-solid
        hover:text-[#ffcd00] hover:border-[#ffcd00] transition-all duration-500
        bg-secondary text-white border-white shadow-black
        w-1/2 h-full grid content-center justify-center leading-none shadow-sm"
        id="about-link"
      >
        A<br />b<br />o<br />u<br />t</a
      >
    </div>
    <div id="about-space" class="w-full h-full transition-all duration-500">
    </div>
  </div>
</section>

<style>
  html,
  body {
    height: 100%;
    margin: 0;
    padding: 0;
  }
</style>

<script>
  const aboutLink = document.getElementById("about-link");
  const aboutSpace = document.getElementById("about-space");

  // Event listener for section load
  document.addEventListener("sectionLoadEvent", function () {
    setTimeout(() => {
      aboutLink.classList.remove("w-1/2");
      aboutLink.classList.add("w-full");
      setTimeout(() => {
        aboutSpace.classList.remove("h-full");
        aboutSpace.classList.add("h-0");
      }, 150);
      setTimeout(() => {
        document.getElementById("about-label").classList.remove("w-full");
        document.getElementById("about-label").classList.add("w-1/2");
      }, 150);
    }, 500);
  });

  // Event listener for section unload
  document.addEventListener("sectionUnloadEvent", function () {
    aboutSpace.classList.remove("h-0");
    aboutSpace.classList.add("h-full");
    aboutLink.classList.remove("w-full");
    aboutLink.classList.add("w-1/2");
    document.getElementById("about-label").classList.add("w-full");
    document.getElementById("about-label").classList.remove("w-1/2");
  });
</script>
