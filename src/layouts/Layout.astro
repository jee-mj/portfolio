---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="made by jee-mj" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <style>
      @import "@fontsource/smooch-sans/700";
    </style>
  </head>
  <body
    id="body"
    class="duration-2000 bg-[url('/assets/bg.jpg')] bg-cover bg-center"
  >
    <!-- styling -->
    <div class="w-full h-4 bg-black absolute top-0"></div>
    <div class="w-full h-4 bg-black absolute bottom-0"></div>
    <div class="w-4 h-full bg-black absolute left-0"></div>
    <div class="w-4 h-full bg-black absolute right-0"></div>
    <div
      id="earth"
      class="w-[16rem] h-[16rem] bg-[url('/assets/mars.png')] bg-center bg-cover absolute right-32 top-32 z-10"
    >
    </div>
    <div
      id="mars"
      class="w-[16rem] h-[16rem] bg-[url('/assets/earth.png')] bg-center bg-cover absolute left-72 bottom-24 z-10"
    >
    </div>
    <slot />
  </body>
</html>
