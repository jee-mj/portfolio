---
import AnimatedBackground from "../components/bg/bg.astro";
import Popup from "../components/popup.astro";
interface Props {
  title: string;
}
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="made by jee-mj" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="./favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Smooch+Sans:wght@700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="bg-black">
    <Popup />
    <AnimatedBackground />
    <script>
      const background = document.getElementById(
        "animated-background"
      ) as HTMLDivElement;
      const popupForm = document.getElementById("popup") as HTMLFormElement;
      const lowFidelity = document.getElementById(
        "popup-checkbox"
      ) as HTMLInputElement;

      popupForm.addEventListener("submit", (e) => {
        e.preventDefault();
        if (lowFidelity.checked == true) {
          background.innerHTML = `
          <div class="absolute top-4 left-4 right-4 bottom-4 w-[calc(100vw-2rem)] h-[calc-100vh-2rem] bg-cover bg-center bg-[url(/assets/background/bg-2.webp)]">
          </div>
          `;
          document.querySelectorAll(".transition-all").forEach((i) => {
            i.classList.replace("transition-all", "transition-none");
          });
        }
        popupForm.classList.add("hidden");
      });
    </script>

    <slot />
    <div
      class="bottom-0 left-[50%] translate-x-[-50%] absolute text-xs text-white"
    >
      Copyright &copy; 2023 jee-mj
    </div>
  </body>
</html>
